<openerp>
    <data>
        <record id="erp.product_template_rondover_action" model="ir.actions.act_window">
            <field name="res_model">product.template</field>
            <field name="name">Product Rondover</field>
        </record>

        <record model="ir.ui.view" id="erp.product_template_rondover_list">
            <field name="name">Product</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Product"/>
                </tree>
            </field>
        </record>

        <record id="product_template_rondover_form" model="ir.ui.view">
            <field name="name">Product</field>
            <field name="priority" eval="0"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="name" string="Product"/>
                            <field name="company_id" string="Compañía"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>