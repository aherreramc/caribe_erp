<openerp>
    <data>
        <record id="erp.nomencladores_etapa_action" model="ir.actions.act_window">
            <field name="res_model">erp.nomencladores.etapa</field>
            <field name="name">Etapa</field>
        </record>

        <record model="ir.ui.view" id="erp.nomencladores_etapa_lista">
            <field name="name">Etapa</field>
            <field name="model">erp.nomencladores.etapa</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Etapa"/>
                </tree>
            </field>
        </record>

        <record id="etapa_form" model="ir.ui.view">
            <field name="name">Etapa</field>
            <field name="priority" eval="0"/>
            <field name="model">erp.nomencladores.etapa</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="name" string="Etapa"/>
                            <field name="name_english"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>