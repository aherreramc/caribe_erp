<openerp>
    <data>
        <record id="erp.nomencladores_puerto_action" model="ir.actions.act_window">
            <field name="res_model">erp.nomencladores.puerto</field>
            <field name="name">Puerto</field>
        </record>

        <record model="ir.ui.view" id="erp.nomencladores_puerto_lista">
            <field name="name">Puerto</field>
            <field name="model">erp.nomencladores.puerto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Puerto"/>
                    <field name="pais" string="País"/>
                    <field name="tipo" string="Tipo"/>
                </tree>
            </field>
        </record>

        <record id="puerto_form" model="ir.ui.view">
            <field name="name">Puerto</field>
            <field name="priority" eval="0"/>
            <field name="model">erp.nomencladores.puerto</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2">
                            <field name="name" string="Puerto"/>
                            <field name="pais" string="País"/>
                            <field name="tipo" string="Tipo"/>
                            <field name="compannia" string="Compañía"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>