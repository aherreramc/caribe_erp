<openerp>
    <data>
        <record id="erp.nomencladores_potencia_action" model="ir.actions.act_window">
            <field name="res_model">erp.nomencladores.potencia</field>
            <field name="name">Potencia</field>
        </record>

        <record model="ir.ui.view" id="erp.nomencladores_potencia_lista">
            <field name="name">Potencia</field>
            <field name="model">erp.nomencladores.potencia</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Potencia"/>
                </tree>
            </field>
        </record>

        <record id="potencia_form" model="ir.ui.view">
            <field name="name">Potencia</field>
            <field name="priority" eval="0"/>
            <field name="model">erp.nomencladores.potencia</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="dar_como_pagado" type="object" estado="no_pagado" string="Dar como pagado" id="dar_como_pagado"
                            attrs="{'invisible': [('estado','not in',('no_pagado'))]}"/>
                        <button name="dar_como_no_pagado" type="object" string="Dar como no pagado" id="dar_como_no_pagado"
                            attrs="{'invisible': [('estado','not in',('pagado'))]}"/>
                        <field name="estado" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="2">
                            <field name="actualizar_migraciones" string="actualizar_migraciones"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>