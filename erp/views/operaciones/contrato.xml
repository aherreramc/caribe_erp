        <template id="assets_backend" name="contratos assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <!--These links will be called when loading your Odoo -->
                <!--En cada vista se ha incluido un ccs general(cssfile.css) y otro con las particularidades de la vista (<nombre_vista>.css)-->
