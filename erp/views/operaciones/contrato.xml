        <record id="erp.operaciones_contrato_action" model="ir.actions.act_window">
            <field name="res_model">erp.operaciones.contrato</field>
            <field name="name">Contratos</field>
            <field name="domain">[('ultima_version','=',True)]</field>
        </record>

        <record model="ir.ui.view" id="erp.operaciones_contrato_lista">
            <field name="name">Contratos</field>
            <field name="model">erp.operaciones.contrato</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="contratos"/>
                    <field name="fecha_valor" string = "Fecha Registro"/>
                    <field name="importe_repuestos_con_descuento" string = "Importe MON"/>
                    <field name="moneda_mon" string = "Moneda"/>
                    <field name="observaciones" string = "Observaciones"/>
                </tree>
            </field>
        </record>

        <record id="contrato_filter" model="ir.ui.view">
            <field name="name">Filtro contrato</field>
            <field name="model">erp.operaciones.contrato</field>

            <field name="arch" type="xml">
                <search string="Filtro de los contratos">
                    <field name="name" string="contratos"/>
                    <field name="cliente" string="Cliente"/>
                    <field name="fecha_valor" string = "Fecha Registro"/>
                    <field name="importe_repuestos_con_descuento" string = "Importe MON"/>
                    <field name="observaciones" string = "Observaciones"/>
                </search>
            </field>
        </record>

