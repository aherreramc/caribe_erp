                                        <field name="importe_opcional_1"/>
                                        <field name="opcional_2" placeholder="Escriba el concepto del importe"/>
                                        <field name="importe_opcional_2"/>
                                    </group>
                                    <group col="2">
                                        <group col="2">
                                            <field name="importe_repuestos_con_descuento"/>
                                        </group>
                                    </group>
                                </div>


