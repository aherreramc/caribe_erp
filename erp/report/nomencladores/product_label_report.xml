<odoo>

    <data>
        <template id="product_label_repo">
            <!-- Re-browse of the record with the partner lang -->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <div class="page">


                        <div class="oe_structure"/>

                        <div class="row border_red">
                            <div class="col-12">
                                <div class="row border_orange_bottom">
                                    <div class="col-8 border_orange_right"
                                         style="margin-top: auto; margin-bottom: auto;">
                                        <div style="width:95%; margin: auto;">
                                            <img src="/erp/static/src/img/report_label_presentation.PNG"
                                                 style="width:95%;"/>
                                        </div>
                                    </div>

                                    <div class="col-4">
                                        <div class="row border_orange_bottom">
                                            <div class="col-12">
                                                <div class="text-center report_label_bag">
                                                    <p>
                                                        <img t-attf-src="data:image/*;base64,{{product.image_1920}}"
                                                             class="image_product"/>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-6 border_orange_right">
                                                <p class="verde font_regular" style="padding-bottom:2em;">Número de
                                                    Orden:
                                                </p>
                                            </div>
                                            <div class="col-6">
                                                <p class="verde font_regular" style="padding-bottom:2em;">Código de
                                                    envío:
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="height:100%!important;">
                                    <div class="col-8 border_orange_right">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="row">
                                                    <div class="col-8 ">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-8 border_orange_right">
                                                                <p class="verde font_bold ">Producto:</p>
                                                            </div>
                                                            <div class="col-4 border_orange_right">
                                                                <p>
                                                                    <p class="verde font_bold ">Tamaño:</p>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-8 text-center border_orange_right abs-center">
                                                                <p class="verde font_bold icons"
                                                                   style="font-style: normal">
                                                                    <t t-if="product.categ_id">
                                                                        <span t-field="product.categ_id.name"/>
                                                                    </t>
                                                                </p>
                                                            </div>
                                                            <div class="col-4 text-center border_orange_right parent">
                                                                <p class="verde font_regular_simple child">
                                                                    <span t-field="product.size"/>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 border_orange_right">
                                                                <p class="verde font_bold">Contenido:</p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 border_orange_right">
                                                                <p class="verde font_regular_simple">
                                                                    <span t-field="product.descripcion_cliente"/>
                                                                </p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <div class="col-4 border_orange_bottom">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 ">
                                                                <p class="verde font_bold">Código:</p>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 text-center abs-center">
                                                                <p class="verde font_bold_product child_bold icons"
                                                                   style="padding-top:1.3em;">
                                                                    <span t-field="product.name"/>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 columna_telefono ">
                                                <p class="orange font_bold_footer_table ">
                                                    (998) 131 2322
                                                </p>
                                            </div>
                                            <div class="col-6 columna_pagina">
                                                <p class="orange font_bold_footer_table ">
                                                    BIOTIVS.COM
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4" style="height:100%!important;">
                                        <div class="row" style="height:100%!important;">
                                            <div class="col-6 border_orange_right border_orange_bottom">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/this_side_up.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/inflamable.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/away_from_heat.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <span>
                                                    <img class="img-responsive" t-if="product.barcode"
                                                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 900, 200)"
                                                         style="height: 60px;width: 100%; margin-top: 45%;"/>

                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <style type="text/css">

                        .parent {
                        padding: 3% 0;
                        }
                        .child {
                        padding: 4% 0;
                        }
                        .parent_bold {
                        padding: 1% 0;
                        }
                        .child_bold {
                        padding: 2% 0;
                        }

                        .report_label_bag{
                        width:95%;
                        margin: auto;
                        padding-bottom:5px;
                        padding-top:5px;
                        }

                        .icons{
                        width:100%;
                        margin: auto;
                        padding-bottom:10px;
                        padding-top:10px;
                        }

                        .border_none{
                        border:none !important;
                        }

                        .border_red{
                        border: 1px solid !important;
                        border-top-right-radius: 60px;
                        border-color: #ff2e17 !important;
                        }

                        .border_orange{
                        border: 1px solid !important;
                        border-color: #f09d60 !important;
                        }
                        .border_orange_bottom{
                        border-bottom: 1px solid !important;
                        border-color: #f09d60 !important;
                        }
                        .border_orange_right{
                        border-right: 1px solid !important;
                        border-color: #f09d60 !important;
                        }

                        .columna_telefono{
                        border:none;
                        text-align: left;
                        border-color: black !important;
                        }

                        .columna_pagina{
                        border:none;
                        text-align: right;
                        border-color: black !important;
                        }

                        .font_regular_simple{
                        font-size: 18px;
                        }

                        .font_regular{
                        font-size: 18px;
                        font-style: italic;
                        }
                        .font_bold {
                        font-size: 18px;
                        font-weight: bold;
                        font-style: italic;
                        }
                        .font_bold_product {
                        font-size: 30px;
                        font-weight: bold;
                        }

                        .font_bold_footer_table {
                        font-size: 22px;
                        font-weight: bold;
                        }

                        .orange{
                        color: #ffb17b;
                        }

                        .verde{
                        color: #2d7e5e;
                        }

                        .abs-center {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        min-height: 100vh;
                        }

                        .alejandro_centrar_imagen_en_td{
                        padding-top: 42%;
                        max-width: 100%;
                        }

                        .image_product{
                        max-height: 100px;
                        max-width: 100%;
                        }


                    </style>
                </t>
            </t>

        </template>
    </data>

</odoo>