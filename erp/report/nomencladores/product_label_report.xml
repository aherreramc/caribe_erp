<odoo>

    <data>
        <template id="product_label_repo">
            <!-- Re-browse of the record with the partner lang -->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">

                    <div class="page">


                        <div class="oe_structure"/>

                        <div class="row border_red">
                            <div class="col-12">
                                <div class="row border_orange_bottom">
                                    <div class="col-8 border_orange_right"
                                         style="margin-top: auto; margin-bottom: auto;">
                                        <div style="width:95%; margin: auto;">
                                            <img src="/erp/static/src/img/report_label_presentation.PNG"
                                                 style="width:95%;"/>
                                        </div>
                                    </div>

                                    <div class="col-4">
                                        <div class="row border_orange_bottom">
                                            <div class="col-12">
                                                <div class="text-center report_label_bag">
                                                    <!--<img src="/erp/static/src/img/report_label_bag.PNG"-->
                                                    <!--style="width:30%;"/>-->
                                                    <!--<img t-att-src="'data:image/png;base64,%s' % product.image_variant"/>-->
                                                    <!--<img t-att-src="'data:image/png;base64,%s' % product.image_variant" class="alejandro_centrar_imagen_en_td"/>-->

                                                    <!--<img t-if="product.image_small" t-att-src="'data:image/jpg;base64,%s' % (product.image_small,)" style="max-height:45pt;max-width:90%"/>-->

                                                    <!--<span t-field="product.image_small" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-rounded&quot;}"/>-->
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row border_orange_bottom">
                                            <div class="col-6 border_orange_right">
                                                <p class="verde font_regular">Número de Orden:</p>
                                            </div>
                                            <div class="col-6">
                                                <p class="verde font_regular">Código de envío:</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 border_orange_right">
                                                <p class="verde font_regular"></p>
                                            </div>
                                            <div class="col-6">
                                                <p class="verde font_regular"></p>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-8 border_orange_right">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="row">
                                                    <div class="col-8 ">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-8 border_orange_right">
                                                                <p class="verde font_bold ">Producto:</p>
                                                            </div>
                                                            <div class="col-4 border_orange_right">
                                                                <p>
                                                                    <p class="verde font_bold ">Tamaño:</p>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-8 text-center border_orange_right abs-center">
                                                                <p class="verde font_bold icons" style="font-style: normal">
                                                                    <t t-if="product.categ_id">
                                                                        <span  t-field="product.categ_id.name"/>
                                                                    </t>
                                                                </p>
                                                            </div>
                                                            <div class="col-4 text-center border_orange_right parent">
                                                                <p class="verde font_regular_simple child">
                                                                    <span t-field="product.size"/>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 border_orange_right">
                                                                <p class="verde font_bold">Contenido:</p>
                                                            </div>
                                                        </div>

                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 border_orange_right">
                                                                <p class="verde font_regular_simple">
                                                                    <span t-field="product.descripcion_cliente"/>
                                                                </p>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    <div class="col-4 border_orange_bottom">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12 ">
                                                                <p class="verde font_bold">Código:</p>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12 text-center abs-center">
                                                                <p class="verde font_bold_product child_bold icons">
                                                                    <span t-field="product.name"/>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 columna_telefono ">
                                                <p class="orange font_bold_footer_table ">
                                                    (998) 131 2322
                                                </p>
                                            </div>
                                            <div class="col-6 columna_pagina">
                                                <p class="orange font_bold_footer_table ">
                                                    BIOTIVS.COM
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="row">
                                            <div class="col-6 border_orange_right">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/this_side_up.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row border_orange_bottom">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/inflamable.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="icons">
                                                                    <img src="/erp/static/src/img/away_from_heat.PNG"
                                                                         style="width:80%;"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <!--<img t-att-src="'data:image/png;base64,%s' % product.barcode_image"/>-->
                                                <!--<img t-attf-src="'data:image/*;base64,{{product.barcode_image}}'"/>-->
                                                <span>
                                                        <!--<img t-att-src="'data:image/png;base64,%s' % product.barcode_image"-->
                                                             <!--class="alejandro_centrar_imagen_en_td"/>-->

                                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;' % ('Code128', product.name)"
                                                         class="alejandro_centrar_imagen_en_td"/>

                                                        <!--<img t-att-src="'data:image/png;base64,%s' % linea.producto.image_variant" class="alejandro_centrar_imagen_en_td"/>-->
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <style type="text/css">

                        .parent {
                        padding: 3% 0;
                        }
                        .child {
                        padding: 4% 0;
                        }
                        .parent_bold {
                        padding: 1% 0;
                        }
                        .child_bold {
                        padding: 2% 0;
                        }

                        .report_label_bag{
                        width:95%;
                        margin: auto;
                        padding-bottom:25px;
                        padding-top:25px;
                        }

                        .icons{
                        width:100%;
                        margin: auto;
                        padding-bottom:10px;
                        padding-top:10px;
                        }

                        .border_none{
                        border:none !important;
                        }

                        .border_red{
                        border: 1px solid !important;
                        border-top-right-radius: 60px;
                        border-color: #ff2e17 !important;
                        }

                        .border_orange{
                        border: 1px solid !important;
                        border-color: #f09d60 !important;
                        }
                        .border_orange_bottom{
                        border-bottom: 1px solid !important;
                        border-color: #f09d60 !important;
                        }
                        .border_orange_right{
                        border-right: 1px solid !important;
                        border-color: #f09d60 !important;
                        }

                        .columna_telefono{
                        border:none;
                        text-align: left;
                        border-color: black !important;
                        }

                        .columna_pagina{
                        border:none;
                        text-align: right;
                        border-color: black !important;
                        }

                        .font_regular_simple{
                        font-size: 18px;
                        }

                        .font_regular{
                        font-size: 18px;
                        font-style: italic;
                        }
                        .font_bold {
                        font-size: 18px;
                        font-weight: bold;
                        font-style: italic;
                        }
                        .font_bold_product {
                        font-size: 36px;
                        font-weight: bold;
                        }

                        .font_bold_footer_table {
                        font-size: 22px;
                        font-weight: bold;
                        }

                        .orange{
                        color: #ffb17b;
                        }

                        .verde{
                        color: #2d7e5e;
                        }

                        .abs-center {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        min-height: 100vh;
                        }

                        .alejandro_centrar_imagen_en_td{
                        padding-top: 42%;
                        max-width: 100%;
                        }

                        <!--.row + .row {-->
                        <!--border-top:0 ;-->
                        <!--}-->
                    </style>
                </t>
            </t>

        </template>
    </data>

</odoo>