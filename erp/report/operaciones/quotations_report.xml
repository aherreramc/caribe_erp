<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="quotations_report">
            <!-- Re-browse of the record with the partner lang -->
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">

                        <div class="page">
                            <div class="oe_structure"/>


                            <div class="row border_orange border_radius_10">
                                <div class="col-12">
                                    <div class="row abs-center text-center border_gross_bottom_orange firt_table_firt_row">
                                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                            <span>ATENCIÓN</span>
                                        </div>
                                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                            <span>FACTURAR</span>
                                        </div>
                                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                            <span>DIRECCIÓN</span>
                                        </div>
                                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                            <span>FOLIO</span>
                                        </div>
                                        <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                            <span>FECHA</span>
                                        </div>
                                    </div>
                                    <div class="row abs-center text-center second_table_firt_row">

                                    </div>
                                </div>
                            </div>

                            <div class="row border_orange border_radius_10">
                                <div class="col-12">
                                    <div class="row abs-center text-center">
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>CÓDIGO</span>
                                        </div>
                                        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                            <span>DESCRIPCIÓN</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>CANT</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>UNIDAD</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>PZAS X CAJA</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>PZAS TOTALES</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>PRECIO UNITARIO</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>PRECIO POR PZA</span>
                                        </div>
                                        <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                            <span>TOTAL</span>
                                        </div>
                                    </div>
                                    <t t-foreach="doc.order_line" t-as="line">
                                        <div class="row border_order_line_row abs-center text-center">
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span t-field="line.product_id.name"/>
                                            </div>
                                            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                                <span t-field="line.name"/>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span t-field="line.product_uom_qty"/>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>UNIDAD</span>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>PZAS X CAJA</span>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>PZAS TOTALES</span>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>PRECIO UNITARIO</span>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>PRECIO POR PZA</span>
                                            </div>
                                            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                                <span>TOTAL</span>
                                                <span t-field="doc.name"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>

                        </div>

                        <style type="text/css">
                            .border_none{
                            border:none !important;
                            }

                            .border_orange{
                            border: 1px solid;
                            border-color: #f09d60;
                            }

                            .border_gross_bottom_orange{
                            border-bottom: 2px solid;
                            border-color: #f09d60;
                            }

                            .border_right_orange{
                            border-right: 1px solid !important;
                            border-color: #f09d60 !important;
                            }

                            .orange{
                            color: #f09d60;
                            }

                            .col-xs-5, .col-sm-5, .col-md-5, .col-lg-5 {
                            float: left;
                            max-width: 20%;
                            }

                            .col-xs-5 {
                            float: left;
                            max-width: 20%;
                            }

                            .abs-center {
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            }

                            .border_radius_10{
                            border-radius: 10px;
                            }

                            .firt_table_firt_row{
                            min-height: 20px;
                            }

                            .second_table_firt_row{
                            min-height: 60px;
                            }

                            .border_order_line_row{
                            border-top: 2px solid !important;
                            border-color: #f09d60 !important;
                            }


                        </style>
                    </t>
                </t>
            </t>

        </template>
    </data>
</odoo>