<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
                id="product_label_reporte"
                model="product.template"
                string="Product Label"
                report_type="qweb-html"
                name="erp.product_label_report"
                attachment_use="True"
                file="erp.product_label_report"
        />

        <template id="product_label_report">
            <!-- Re-browse of the record with the partner lang -->
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="header">
                        Header
                    </div>

                    <div class="page">
                        <div class="oe_structure"/>


                        <div class="row">


                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="row">
                                    <div class="col-9">
                                        <div class="row">
                                            <div class="col-8">
                                                <p>Productoo:</p>
                                            </div>
                                            <div class="col-4">
                                                <p>Tamaño:</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-3">
                                        <div class="row">
                                            <div class="col-12">
                                                <p>Código:</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-8">
                                        <p>
                                            <span t-field="product.name"/>
                                        </p>
                                    </div>
                                    <div class="col-4">
                                        <p>
                                            <span t-field="product.size"/>
                                        </p>
                                    </div>
                                </div>


                            </div>

                            <div class="col-4">

                            </div>
                        </div>

                        <div class="footer">
                            Header
                        </div>
                    </div>

                    <style type="text/css">
                        .col {
                        border: 1px solid;
                        }

                        <!--.row + .row {-->
                        <!--border-top:0 ;-->
                        <!--}-->
                    </style>
                </t>
            </t>

        </template>


    </data>
</odoo> 