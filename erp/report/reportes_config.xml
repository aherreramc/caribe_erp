        <report
                id="product_label_reporte"
                model="product.template"
                string="Product Label"
                report_type="qweb-pdf"
                name="erp.product_label_report"
                attachment_use="True"
                file="erp.product_label_report"
        />

        <template id="product_label_report">
            <!-- Re-browse of the record with the partner lang -->
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="header">
                        Header
                    </div>

                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-6">
                                <strong>Invoice and shipping address:
                                </strong>
                            </div>
                            <div class="oe_structure"/>
                        </div>
                    </div>

                    <div class="footer">
                        Header
                    </div>
                </t>
            </t>

        </template>


    </data>
</odoo> 